      <script>
        $(document).ready(function () {
          $('.otp-input').on('keyup', function (e) {
            var maxLength = parseInt($(this).attr('maxlength'));
            var currentLength = $(this).val().length;
      
            if (e.keyCode === 8 && currentLength === 0) {
              // If backspace is pressed and the current input is empty
              // Move focus to the previous input if available
              var prevInput = $(this).prev('.otp-input');
              if (prevInput.length > 0) {
                prevInput.val('').focus();
              }
            } else if (currentLength === maxLength) {
              // Move focus to the next input if available
              var nextInput = $(this).next('.otp-input');
              if (nextInput.length > 0) {
                nextInput.focus();
              } else {
                // If it's the last input, trigger form submission
                //$('#otpForm').submit();
              }
            }
          });
      
          $('#otpForm').on('submit', function (event) {
            event.preventDefault();
      
            // Get the entered OTP
            var enteredOTP = $('.otp-input').map(function () {
              return $(this).val();
            }).get().join('');
      
            // Check if the entered OTP is '123456'
            if (enteredOTP === '123456') {
              // Redirect to the dashboard page
              window.location.href = '/dashboard-02';
            } else {
              // Display an error message (you can customize this part)
              alert('Invalid OTP. Please try again.');
            }
          });
        });
      </script>
      

