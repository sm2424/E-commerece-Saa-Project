    <!-- login page start-->
    <div class="container-fluid">
      <div class="row">
        <div class="col-12 p-0">
          <div class="login-card login-dark">
            <div>
              <div><a class="logo text-start" href="/"><img class="img-fluid for-light" src="../assets/images/logo/logo.png" alt="looginpage"><img class="img-fluid for-dark" src="../assets/images/logo/logo_dark.png" alt="looginpage"></a></div>
              <div class="login-main"> 
                <form action="/submit" method="post" id="myForm">
                  <h4>Sign in to account</h4>
                  <p>Enter your phone number</p>
                  <div class="form-group">
                    <label class="col-form-label">Mobile Number</label>
                    <input class="form-control" type="tel" id="mobileNumber" required="" placeholder="xxxxxxxxxx" pattern="\d{10}" title="Please enter a valid 10-digit mobile number">
                    <div id="mobileNumberError" class="text-danger"></div>
                  </div>
                                 
                  <div class="form-group mb-0">
                    
                    <div class="text-end mt-3">
                      <button class="btn btn-primary btn-block w-100" type="submit">Get OTP</button>
                    </div>
                  </div>
                </form>
                  
                </form>
